{
  "name": "gladia-lead-gen",
  "version": "1.0.0",
  "type": "module",
  "description": "Lead generation and email writing system for Gladia using Exa Websets and Claude",
  "main": "gladia-lead-gen.js",
  "scripts": {
    "start": "node gladia-lead-gen.js",
    "cold": "EMAIL_TYPE=cold_outreach node gladia-lead-gen.js",
    "followup": "EMAIL_TYPE=follow_up node gladia-lead-gen.js",
    "value": "EMAIL_TYPE=value_add node gladia-lead-gen.js",
    "regen": "node regenerate-emails.js",
    "regen:cold": "EMAIL_TYPE=cold_outreach node regenerate-emails.js",
    "regen:followup": "EMAIL_TYPE=follow_up node regenerate-emails.js",
    "regen:value": "EMAIL_TYPE=value_add node regenerate-emails.js",
    "server": "node server.js",
    "frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run frontend\"",
    "kill": "pkill -f 'node server.js' || true && pkill -f 'vite' || true"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.2.3",
    "exa-js": "^1.0.11",
    "express": "^5.1.0"
  }
}
