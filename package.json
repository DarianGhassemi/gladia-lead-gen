{
  "name": "gladia-lead-gen-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for Gladia lead generation and email system",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev --workspace=@gladia-lead-gen/web",
    "dev:api": "npm run dev --workspace=@gladia-lead-gen/api",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=@gladia-lead-gen/web",
    "start:api": "npm run start --workspace=@gladia-lead-gen/api",
    "generate": "npm run generate --workspace=@gladia-lead-gen/api",
    "generate:cold": "npm run generate:cold --workspace=@gladia-lead-gen/api",
    "generate:followup": "npm run generate:followup --workspace=@gladia-lead-gen/api",
    "generate:value": "npm run generate:value --workspace=@gladia-lead-gen/api",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:builds": "rm -rf apps/*/dist packages/*/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "lead-generation",
    "email",
    "ai",
    "claude",
    "exa",
    "monorepo"
  ],
  "author": "Darian Ghassemi",
  "license": "MIT"
}
